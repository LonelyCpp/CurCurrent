<?xml version="1.0" encoding="utf-8"?>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context=".MainActivity"
>
        <LinearLayout
                android:padding="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/linearLayoutSource"
                android:background="@drawable/rounded_corner_blue8"
                android:layout_margin="20dp"
                android:elevation="10dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                >

            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sourceCountrySpinner"
                    android:backgroundTint="@color/white"
                    />
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/amountInput"
                    android:inputType="numberDecimal"
                    android:hint="@string/amount"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/white" />
        </LinearLayout>

    <LinearLayout
            android:id="@+id/linearDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutSource"
            android:layout_margin="20dp"
            android:elevation="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"

            >

        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/destinationCountrySpinner"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/resultText"
                />
    </LinearLayout>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            app:layout_constraintStart_toStartOf="@+id/linearLayoutSource"
            app:layout_constraintEnd_toEndOf="@+id/linearLayoutSource"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayoutSource"
            android:visibility="gone"
    />

    <Button
            android:id="@+id/convertBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/convert"
            app:layout_constraintEnd_toEndOf="@+id/linearLayoutSource"
            app:layout_constraintStart_toStartOf="@+id/linearLayoutSource"
            app:layout_constraintTop_toBottomOf="@+id/linearDestination" />
</androidx.constraintlayout.widget.ConstraintLayout>
